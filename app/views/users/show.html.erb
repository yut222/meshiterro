<!-- ユーザーの詳細 -->
  <div>
    <h3><%= @user.name%></h3>  <!-- ユーザーの名前を表示 -->
    <%= image_tag @user.get_profile_image(100,100) %>  <!-- 画像を表示 -->
    <% if @user == current_user %>
      <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
    <% end %>
  </div>

<!-- ユーザーの投稿一覧 -->
